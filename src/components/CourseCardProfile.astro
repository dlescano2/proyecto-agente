---
const { imageUrl, category, title, instructor, instructorImageUrl, courseUrl } = Astro.props;
---

<div class="border rounded-lg p-4 flex space-x-4">
  <img src={imageUrl} alt={title} class="w-1/3 rounded-lg object-cover">
  <div class="flex-1">
    <span class="bg-gray-200 text-gray-800 text-sm px-2 py-1 rounded-full">{category}</span>
    <h2 class="text-xl font-semibold mt-2">{title}</h2>
    <div class="flex items-center mt-2">
      <img src={instructorImageUrl} alt={instructor} class="w-8 h-8 rounded-full">
      <span class="ml-2">{instructor}</span>
    </div>
    <a href={courseUrl} class="mt-4 inline-block bg-green-500 text-white px-4 py-2 rounded">Ir al curso</a>
  </div>
</div>
