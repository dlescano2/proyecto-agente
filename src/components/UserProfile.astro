---
export interface Props {
  imgSrc: string;
  name: string;
  role: string;
}

const { imgSrc, name, role } = Astro.props;
---

<div class="flex items-center space-x-4">
  <img src={imgSrc} alt={name} class="size-32 rounded-full border-4 border-green-500" />
  <div>
    <p class="text-xl font-semibold text-gray-900">{name}</p>
    <p class="text-lg text-green-600">{role}</p>
  </div>
</div>
