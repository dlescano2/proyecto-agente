---
const { title, instructor, duration, level, students, image, tags, url } = Astro.props;
---
<a href={url} class="block border rounded-lg shadow-lg overflow-hidden bg-white transition-transform transform hover:scale-105">
  <img src={image} alt={title} class="w-full h-48 object-cover"/>
  <div class="p-4">
    <div class="mb-2">
      {tags.map(tag => (
        <span class="bg-green-500 text-white text-xs font-semibold mr-2 px-2.5 py-0.5 rounded">{tag}</span>
      ))}
    </div>
    <h3 class="text-xl font-semibold">{title}</h3>
    <p class="text-gray-500">Por {instructor}</p>
    <div class="flex justify-between items-center mt-4">
      <span class="text-sm text-gray-500 flex items-center gap-2">
        <img src="/img/basico.svg" alt="Nivel básico">
        {level}
      </span>
      <span class="text-sm text-gray-500 flex items-center gap-2">
        <img src="/img/reloj.svg" alt="Duración">
        {duration}
      </span>
      <span class="text-sm text-gray-500 flex items-center gap-2">
        <img src="/img/estudiantes.svg" alt="Cantidad de estudiantes">
        {students}
      </span>
    </div>
  </div>
</a>
