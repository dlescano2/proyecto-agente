---
import Footer from '../components/Footer.astro';


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<meta name="description" content="Plataforma Mapa Verde" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	</head>
	<body>
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	
	html {
		font-family: system-ui, sans-serif;
		background: #eee;
	}
	
</style>
