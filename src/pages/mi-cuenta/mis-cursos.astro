---
import Header from '../../components/Header.astro';
import UserProfile from '../../components/UserProfile.astro';
import SidebarMenu from '../../components/SidebarMenu.astro';
import Layout from '../../layouts/Layout.astro';
import HeaderSection from '../../sections/HeaderSection.astro';

import CourseCardProfile from '../../components/CourseCardProfile.astro';

const courses = [
  {
    imageUrl: '/src/img/curso-formacion.png',
    category: 'General',
    title: 'Formacion inicial para Agentes Verdes',
    instructor: 'David Millar',
    instructorImageUrl: '/src/img/avatar-docente.png',
    courseUrl: '#'
  },
];
---

<Layout title="Mapa Verde">
	<Header />
	<HeaderSection imgSrc="/src/img/mi-cuenta.png" bgColor="bg-violet-700" />
	<section class="max-w-7xl mx-auto">
		<div class="p-6">
			<UserProfile imgSrc="/src/img/avatar.webp" name="Tatiana Oviedo" role="Agente Verde" />
		</div>

		<div class="flex">
			<SidebarMenu />
			<div class="flex-1 p-6">
			  <h1 class="text-2xl font-bold mb-4">Mis cursos</h1>
			  <div class="space-y-4">
				{courses.map(course => (
				  <CourseCardProfile 
					imageUrl={course.imageUrl} 
					category={course.category} 
					title={course.title} 
					instructor={course.instructor} 
					instructorImageUrl={course.instructorImageUrl} 
					courseUrl={course.courseUrl} 
				  />
				))}
			  </div>			  
			</div>
		  </div>

	</section>
</Layout>